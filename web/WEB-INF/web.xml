<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConsultaFilmesController</servlet-name>
        <servlet-class>controller.ConsultaFilmesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaFornecedoresController</servlet-name>
        <servlet-class>controller.ConsultaFornecedoresController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaFornecedorController</servlet-name>
        <servlet-class>controller.ConsultaFornecedorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultaHistoricoClienteController</servlet-name>
        <servlet-class>controller.consultaHistoricoClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultaCategoriaController</servlet-name>
        <servlet-class>controller.consultaCategoriaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultaFilmesController</servlet-name>
        <url-pattern>/ConsultaFilmesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaFornecedoresController</servlet-name>
        <url-pattern>/ConsultaFornecedoresController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaFornecedorController</servlet-name>
        <url-pattern>/ConsultaFornecedorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultaHistoricoClienteController</servlet-name>
        <url-pattern>/consultaHistoricoClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultaCategoriaController</servlet-name>
        <url-pattern>/consultaCategoriaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
